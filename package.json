{
  "name": "food-delivery-root",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{js,jsx,json,md,html,css,scss}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,md,html,css,scss}\"",
    "client": "cd client && npm start",
    "server": "cd server && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.0.0"
  }
}
